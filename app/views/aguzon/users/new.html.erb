<% provide(:title, '新規登録') %>
<section class="lightSection clearfix SignuppageHeaderImage">
  <div class="container">
    <div class="tableBlock">
      <div class="row tableInner">
        <div class="col-xs-12">
          <div class="page-title">
            <h2> - SIGNUP - </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="form">
  <ul>
    <%= form_for Spree::User.new, as: :spree_user, url: spree.registration_path do |f| %>
      <li><%= f.label :email, class: "email-label" %></li>
      <li><%= f.email_field :email, class: "email-form" %></li>

      <li><%= f.label :password, class: "password-label" %></li>
      <li><%= f.password_field :password, class: "password-form"%></li>

      <li><%= f.label :password_confirmation, class: "password-label" %></li>
      <li><%= f.password_field :password_confirmation, class: "password-form"%></li>

      <li><%= f.submit "signup", class: "btn btn-primary create-my-acount" %></li>
    <% end %>
    <p class="new-user">ログインは <%= link_to "こちら!", new_aguzon_user_session_path %></p>
  </ul>
</div>
