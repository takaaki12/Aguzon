<% provide(:title, @taxon.name) %>
      <!-- LIGHT SECTION -->
      <%= render partial: "layouts/content_header", locals: {content_name: @taxon.name} %>
      <!-- MAIN CONTENT SECTION -->
      <section class="mainContent clearfix productsContent">
        <div class="container">
          <div class="row">
            <%= render partial: "sidebar", locals: {taxonomies: @taxonomies} %>
            <div class="col-md-9 col-sm-8 col-xs-12">
              <%= render partial: "filterarea", locals: {taxon: @taxon}%>
            </div>
          </div>
        </div>
      </section>
      <%= render partial: "list_products", collection: @products, as: "product" %>
