<section class="lightSection clearfix pageHeaderImage">
  <div class="container">
    <div class="tableBlock">
      <div class="row tableInner">
        <div class="col-xs-12">
          <div class="page-title">
            <h2>cart</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix cartListWrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="cartListInner">
          <%= render partial: "line_items", locals: { product: @product } %>
            <div class="totalAmountArea">
              <div class="col-sm-4 col-sm-offset-8 col-xs-12">
                <ul class="list-unstyled">
                  <li>小計<span><%= @order.display_item_total %></span></li>
                  <li>消費税<span><%= @order.display_additional_tax_total %></span></li>
                  <% if @order.shipment_total %>
                    <li>配送料<span><%= @order.display_shipment_total %></span></li>
                  <% end %>
                  <li>総計<span class="grandTotal"><%= @order.display_total %></span></li>
                </ul>
              </div>
            </div>
            <div class="checkBtnArea">
              <ul>
                <li><a href="#" class="btn btn-primary btn-block">購入する<i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a></li>
                <li>
                  <%= link_to aguzon_empty_cart_path, method: :put do %>
                    <span class="btn btn-primary btn-block">空にする<i class="fa fa-shopping-basket" aria-hidden="true"></i></span>
                  <% end %>
                </li>
              </ul>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
