<% if picture_size == "large" %>
  <% if image_counter.zero? %>
    <div class="item active" data-thumb="0">
  <% else %>
    <div class="item" data-thumb=<%= "#{image_counter}" %> >
  <% end %>
    <%= image_tag(image.attachment(:large)) %>
  </div>
<% elsif picture_size == "small" %>
  <div data-target="#carousel" data-slide-to=<%= "#{image_counter}" %> class="thumb"><%= image_tag(image.attachment(:small)) %></div>
<% end %>
