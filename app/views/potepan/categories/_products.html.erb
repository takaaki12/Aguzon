  <div class="col-sm-4 col-xs-12">
    <div class="productBox">
      <div class="productImage clearfix">
        <%= link_to image_tag(product.display_image.attachment(:large), :class => "media-object",  :alt => "Image"), potepan_product_path(product.id) if product.images.any? %>
      </div>
      <div class="productCaption clearfix">
        <%= link_to potepan_product_path(product.id) do %>
          <h5><%= product.name %></h5>
          <h3><%= product.display_price %></h3>
        <% end %>
      </div>
    </div>
  </div>
